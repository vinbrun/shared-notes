{
  "compilerOptions": {
    "esModuleInterop": true,
    "types": [
      "node",
      "jest",
    ],
    "jsx": "react-jsx",
    "target":"ES2023",
    "module": "Node16",
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".", // Required to use "paths"
    "paths": {
        "@shared/*": ["../shared/*"]  // Map `@shared/*` to the shared folder path
    }
  },
  "include": ["src", "../shared"]
}
